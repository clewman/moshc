using System;

class Program
{
    
    static void Main()
    {
      while (true)
      {
        Console.Write("TYpe your name: ");
        var input = Console.ReadLine();
        
        if (!String.IsNullOrWhiteSpace(input))
            {
                  Console.WriteLine("@Echo: " + input);
                  continue;
            }
            
                   break;
      }
    }
}
